<html lang="en">
<html>
    <head>
    <meta charset="UTF-8">
        <link rel="stylesheet" href="./css/styles.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>


<body class="container">
<h2>Create a new Recipe</h2>
    <form method="post" role="form" action="/newRecipe">
        <div class="form-group">
            <label for="dishName">Dish Name:</label>
            <input type="text" class="input-fields" id="dishName" name="dishName" placeholder="Name of the Dish" required>
        </div>

         <p></p>

        <div class="form-group">
            <label for="dishDescription">Dish Description:</label>
            {{! <input type="text" class="input-fields" id="dishDescription" name="dishDescription" placeholder="Enter Dish's Description" required> }}
            <textarea class= "textarea-input"id="dishDescription" placeholder="Type your Description here..." name="dishDescription" required></textarea> 
        </div>

         <p></p>

        <div class="form-group">
            {{! <label for="menuCategory">Choose a Category: </label>
            <input type="text" class="input-fields" id="menuCategory" name="menuCategory" placeholder="Please enter Lunch or Dinner" required> }}
            <label for="menuCategory">Choose a Category:</label>
            <select id="menuCategory" name="menuCategory" class="input-fields" required>
                <option value="">None</option>
                <option value="Lunch">Lunch</option>
                <option value="Dinner">Dinner</option>
            </select>
        </div>

        <p></p>

        <div class="form-group">
            <label for="ingredients">Ingredients:</label>
            {{! <input type="text" class="input-fields" id="ingredients" name="ingredients" placeholder="Enter Dish's Ingredients" required> }}
            <textarea class= "textarea-input"id="ingredients" placeholder="Type your ingerdients here..." name="ingredients" required></textarea>
        </div>

         <p></p>

        <div class="form-group">
            <label for="allergies">Allergies:</label>
            <input type="text" class="input-fields" id="allergies" name="allergies" placeholder="Enter the Dish's Allergies" required>
        </div>

         <p></p>

        <div class="form-group">
            <label for="cost">Cost:</label>
            <input type="number" class="input-fields" id="cost" step="0.01" name="cost" placeholder="Enter the Dish's Cost" required>
        </div>

         <p></p>

         <div class="form-group">
            <label for="isAvailable">Choose Availability:</label>
            <select id="isAvailable" name="isAvailable"  class="input-fields" required>
                <option value=true>Display</option>
                <option value=false>Hide</option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Post recipe" class="btn btn-primary">
        </div>
    </form>
</body>
</html>